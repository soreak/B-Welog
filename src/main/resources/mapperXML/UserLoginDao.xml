<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.soreak.dao.UserLoginDao">

    <resultMap id="userMap" type="com.soreak.entity.User">
        <id property="id" column="id"/>
        <result property="nickname" column="nickname"/>
        <result property="avatar" column="avatar"/>
        <result property="phone" column="phone"/>
        <result property="password" column="password"/>
        <result property="updateTime" column="update_time"/>
        <result property="createTime" column="create_time"/>
        <result property="qq" column="qq"/>
        <result property="git" column="git"/>
        <result property="email" column="email"/>
        <result property="information" column="information"/>
        <result property="type" column="type"/>

    </resultMap>

    <select id="checkUser" parameterType="String" resultMap="userMap">
      select * from sk_user where phone = #{phone} and password = #{password}
    </select>

</mapper>